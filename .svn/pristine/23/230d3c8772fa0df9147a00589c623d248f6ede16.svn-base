<script>
	function findfoodinfo(i){
		$.ajax({
			type:"get",
			url:"/index.php/Mobile/Index/findfoodinfo/food_id/"+i+"",
			success:function(data){
				$("#modelfood").html(data);//加载模态框
			}
		});
	}
</script>