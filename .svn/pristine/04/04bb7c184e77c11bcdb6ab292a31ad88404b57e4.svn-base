html,body{
	height: 100%;
	width: 100%;
	line-height: 1.6;
}
*{
	margin: 0;
	padding: 0;
}
body{
	font-size: 1em;
	padding-top: 3.3em;
	padding-bottom: 50px;
	position: relative;
	background-color: #ededed;
	-webkit-user-select:none;
	-moz-user-select:none;
	-ms-user-select:none;
	user-select:none;
}
button{
	outline: none;
}
.btn-none{
	border: none;
	background-color: transparent;
}
.red{
	color: #e84244;
}
a,button{
	outline: none;
}
/* ---------------------------------------------- /*
 * home 顶部信息
/* ---------------------------------------------- */
.home-header{
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	height: 2.6em;
	color: #fff;
	padding-left: 10px;	
	line-height: 2.6em;
	z-index: 1000;
	font-size: 1.3em;
}
.finish-header{
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	height: 2.6em;
	color: #fff;
	padding-left: 10px;	
	line-height: 2.6em;
	z-index: 1000;
	font-size: 1.3em;
	background-color: #3d3835;
}
.home-header img{
	height: 0.8em;
}
.home-header a{
	text-decoration: none;
	color: #fff;
	display: inline-block;
	position: relative;
	margin-right: 30px;
}
.header-right{
	position: absolute;
	right: 30px;
	top: 0;
}
.header-right img{
	height: 30px;
}
/* ---------------------------------------------- /*
 * home 底部信息
/* ---------------------------------------------- */
.home-footer{
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 50px;
	line-height: 50px;
	font-size: 20px;
	color: #fff;
	z-index: 1000;
}
.footer-show{
	z-index: 2000;
}
/* ---------------------------------------------- /*
 * 点餐页
/* ---------------------------------------------- */
.order{
	width: 100%;
	height: 100%;
	position: relative;
	overflow: hidden;
	padding-left: 8em;
}
.order-left{
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	z-index: 900;
	width: 8em;
	height: 100%;
	overflow-y: auto;	
	background-color: #f3f3f3;	
}
.order-right{
	display: none;
}
.order-content{
	background-color: #fff;
	width: 100%;
	height: 100%;
	overflow-x: hidden;
	overflow-y: auto;
	border-top: 1px solid #ddd;
}
.sorts-list{
	list-style: none;
	margin-bottom: 10px;	
}
.sorts-list li{
	border-bottom: 2px solid #fff;
	padding: 1em 5px;
}
.sorts-list li.active{
	background-color: #c2c2c2;
}
.sorts-list a{
	color: black;
	display: block;
	text-decoration: none;
	text-align: center;
}
.food-list{
	border-bottom: 1px solid #ddd;
	padding: 15px 0 10px 10px;
	line-height: 1.1;
}
.food-list a{
	display: block;
}
.img-content{
	padding: 0;
}
.img-box{
	position: relative;
	width: 100%;
	padding-bottom: 60%;
}
.food-list .img-box>img{
	border-radius: 0.5em;
}
.food-content  .img-box>img{
	border: 1px solid #ddd;
}
.img-box>img{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;	
}
.food-name:hover{
	text-decoration: none;
	color: black;
}
.star-cayenne{
	font-size: 1.1em;
}
.star span{
    color: #e88f19;
}
.cayenne img{
	height: 0.6em;
}
.food-price {
    color: #e84244; 
    font-weight: 600;
    line-height: 1.6;
}
.food-name{
	position: relative;
	width: 8em;
	height: 2.2em;
    color: black;
}
.food-name span{
	position: absolute;
	top: 50%;
	left: 0;
	-webkit-transform:translateY(-50%);
	-ms-transform:translateY(-50%);
	-o-transform:translateY(-50%);
	transform:translateY(-50%);
	width: 100%;
	max-height: 2.2em;
	overflow:hidden;
}
.cart{
	padding-left: 15px;
	padding-right: 15px;
	position: relative;
	font-size: 1em;
	width: 3em;
	background-color: transparent;
	border: 0;
}
.cart span{
	font-size: 1.5em;
	line-height: 50px;
}
.cart-num{
	position: absolute;
	top: 1px;
    right: 0;
    width: 1.1em;
    height: 1.1em;
    line-height: 1.1em;
	text-align: center;
	background-color: #e84244;
	border-radius: 50%;
	border: 1px solid #fff;
}
#cartModal .modal-dialog{
	margin: 0;
	width: 100%;
	bottom: 50px;
	position: absolute;
}
#cartModal .modal-content{
	border-radius: 0;
	border:none;
}

#foodModal{
	height: 100%;
	padding-bottom: 50px;
}
#foodModal .modal-dialog{
	width: 100%;
	height: 100%;
	margin: 0;
}
#foodModal .modal-content{
	height: 100%;
	border: none;
	border-radius: 0;
	padding-bottom: 4em;
}
.food-content{
	height: 100%;
	overflow-y: auto;
}
.food-content .img-box{
	border-bottom: 1px solid #ddd;
}
#foodModal .modal-bottom{
	line-height: 3em;
	position: absolute;
	bottom: 0;
	right: 0;
	left:0;
}
.modal-detail{
	padding-left: 10px;
	padding-right: 10px;
	margin-top: 10px;
	font-size: 1.4em;
	line-height: 1.4;
   	display: -webkit-box; /*box布局并做好兼容*/
    display: box;
    position: relative;
}
.modal-detail-left {
    -webkit-box-flex: 1; /*box-flex:1控制宽度自适应*/
    box-flex: 1;
    overflow: hidden;
    white-space: nowrap;
}
.modal-detail-right {
    padding-left: 10px;
}
.modal-food-name{
	
}
.modal-price{
	font-weight: 600;
}
.modal-price-content{
	padding-top: 10px;
}
.modal-price-content button{
	background-color: #fff;
	width: 1.5em;
	height: 1.5em;
	line-height: 1;
	text-align: center;
	border-radius: 50%;
	border: 1px solid #fc0000;
}
.modal-price-content button img{
	width: 70%;
}
.modal-price-content button:active{
	background-color: #666;
}
.modal-num{
	display: inline-block;
	min-width: 1.5em;
	text-align: center;
	font-size: 1.2em;
}
.food-intro{
	padding-left: 10px;
	padding-right: 10px;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	font-size: 0.9em;
}

.food-attr{
	border-top: 1px solid #ddd;
	padding-top: 5px;
}
.food-attr-name{
	display: inline-block;
	line-height: 40px;
}
.attr-list{
	list-style: none;
	padding-left: 5em;
}
.attr-list li{
	position: relative;
	margin-right: 0.2em;
	margin-bottom: 5px;
	display: inline-block;
	vertical-align: middle;
	width: 5em;
	border-radius: 4px;
	line-height: 1.4;
}
.attr-list .attr-item-name{
	margin-left: -5em;
	margin-bottom: 0;
	width: 4.6em;
	margin-right: 0.2em;
	text-align: center;
}
.attr-name{
	position: relative;
	line-height: 1.1;
	height: 2.2em;
	margin-top: 5px;
}
.attr-name span{
	position: absolute;
	top: 50%;
	left: 0;
	-webkit-transform:translateY(-50%);
	-ms-transform:translateY(-50%);
	-o-transform:translateY(-50%);
	transform:translateY(-50%);
	width: 100%;
	max-height: 100%;
	overflow: hidden;
}
.attr-select-item{
	text-align: center;
	border: 1px solid #787878;
	cursor: pointer;
	border-radius: 2px;
}
.attr-list li input{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
    opacity: 0;
    z-index: 1100;
}
.attr-select{
	background-color: #e68011;
	color: #fff;
}

.modal-bottom{
	line-height: 2.6em;
	background-color: #ff0000;
}
.modal-bottom button{
	float: left;
	border: 0;
	background-color: transparent;
	width: 50%;
	color: #fff;
}
.modal-bottom .btn-close{
	background-color: #7a7a7a;
}

#cartModal .modal-content{
	background-color: #efefef;
}
#cartModal .modal-header{
	padding: 5px 15px;
	line-height: 2em;
	position: relative;
}
#cartModal .modal-header button{
	position: absolute;
	right: 10px;
	top: 5px;
}
#cartModal .modal-body{
	padding: 0;
}
#cartModal .modal-body ul{
	list-style: none;
	margin-bottom: 0;
	max-height: 10em;
	overflow-y: scroll;
	padding-bottom: 5px;
}
.cart-item {
    display: -webkit-box; //box布局并做好兼容
    display: box;
    position: relative;
    background-color: #fff;
    line-height: 3;
    padding-left: 15px;
    padding-right: 15px;
    margin-top: 1px;
}
.cart-left {
    -webkit-box-flex: 1; //box-flex:1控制宽度自适应
    box-flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.cart-right {    //右侧啥都不用管
    text-align: right;
    padding-left: 10px;
}
.cart-right button{
	background-color: #fff;
	width: 26px;
	height: 26px;
	line-height: 18px;
	text-align: center;
	border-radius: 50%;
	border: 1px solid #fc0000;
}
.cart-right button img{
	width:16px;
}
.cart-right button:active{
	background-color: #ddd;
}
.cart-right span{
	min-width: 2em;
    display: inline-block;
    text-align: center;
}
.cart-right .red{
	font-weight: 600;
	min-width: 5em;
	text-align: right;
}
#cartModal .modal-footer{
	padding: 0;
	line-height: 2em;
	position: relative;
}
#cartModal .modal-footer button{
	padding: 0.5em 1.5em;
}
#cartModal .modal-footer .red{
	font-weight: 600;
	font-size: 1.2em;
	position: absolute;
	left: 15px;
	top: 0.5rem;
}
#check-pay{
	color: #fff;
	top: 0;
	right: 0;
	bottom: 0;
	padding-left: 8px;
	padding-right: 8px;
	position: absolute;

}
/* ---------------------------------------------- /*
 * 支付页
/* ---------------------------------------------- */
.pay{
	width: 100%;
}
.pay h2{
	margin-top: 2em;
	line-height: 1.6;
}
.pay-select{
	margin-top: 2em;
	margin-bottom: 1em;
}
.pay-item{
	width: 100%;
	background-color: #fff;
	padding: 0 15px;
	margin-bottom: 1px;
	line-height: 3em;
	position: relative;
}
.pay-item a{
	color: black;
	text-decoration: none;
}
.pay-item-img{
	height: 1.8em;
	margin-right: 1em;
}
.pay-item-right{
	position: absolute;
	right: 15px;
	font-size: 1.2em;
	top: 0;
	color: #ddd;
}
.check-pay{
	width: 90%;
	margin: 1em auto;
	background-color: #e84244;
	color: #fff;
	padding-top: 8px;
	padding-bottom: 8px;
}
.finish{
	position: absolute;
	top: 50%;
	-webkit-transform:translateY(-50%);
	-ms-transform:translateY(-50%);
	-o-transform:translateY(-50%);
	transform:translateY(-50%);
	width: 100%;
	text-align: center;
	font-size: 1.5em;
}
.finish-btn{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	font-size: 1.5em;
	line-height: 2.4;
	background-color: #e50000;
	border: none;
	color: #fff;
}
/* ---------------------------------------------- /*
 * 激活页
/* ---------------------------------------------- */
.activate-btn{
	font-size: 1.2em;
	padding-top: 3px;
	padding-bottom: 3px;
	width: 100%;
	margin-top: 1em;
	border-radius: 5px;
}
/* ---------------------------------------------- /*
 * 登录注册页
/* ---------------------------------------------- */
.login{
	margin-top: 20px;
}
.login-info{
	margin-bottom: 10px;
}
.login-form{
	position: relative;
	margin-top: 20px;
	margin-bottom: 10px;
}
.login-form input{
	height: 34px;
	text-indent: 1em;
}
.input-icon{
	position: absolute;
	left: 8px;
	top: 0;
	line-height: 34px;
	color: #bbb;
}
.login-info-link{
	text-indent: 1em;
	display: block;
	margin-top: 5px;
}
.send-message{
	position: absolute;
	right: 0;
	top: 0;
	line-height: 34px;
	border: none;
	border-left: 1px solid #ddd;	
	padding: 0 5px 0 5px;
	background-color: transparent;
	outline: none;
}
.send-message:focus{
	background-color: #ddd;
}
.user-info{
	background-color: #fff;
	padding-top: 5px;
	box-shadow: 0px 3px 3px #bbb;
}
.user-info-avatar{
	width: 5em;
	height: 5em;
}
.user-phone{
	line-height: 5em;
}
.user-address{
	margin-top: 10px;
	border-top: 1px solid #ddd;
	text-indent: 1em;
	line-height: 2;
	padding-top: 5px;
	padding-bottom: 5px;
	width: 100%;
	white-space: nowrap;
	overflow: hidden; 
	text-overflow:ellipsis;
}
.user-list{
	margin-top: 20px;
}
.user-list-item{
	position: relative;
	display: block;
	background-color: #fff;
	padding: 8px;
	color: #666;
	margin-top: 1px;
}
.user-list-right{
	position: absolute;
	right: 8px;
	top: 9px;
}
.address-list-item{
	position: relative;
	background-color: #fff;
	padding: 10px;
	color: #666;
	margin-bottom: 2px;
	line-height: 2;
}
.address-set{
	position: absolute;
	right: 5px;
	top: 5px;
}
.address-set button{
	background-color: transparent;
	color: #e84244;
	border:0;
	padding:5px;
	margin-left: 5px;
	font-size: 1.3em;
}
.address-edit{
	margin-top: 20px;
}
.address-edit table tr td{
	padding-bottom: 10px;
}
.address-edit select{
	margin-bottom: 5px;
	display: inline-block;
	width: auto;
	padding: 0;
}
.address-edit table tr td:first-child{
	min-width: 6em;
}